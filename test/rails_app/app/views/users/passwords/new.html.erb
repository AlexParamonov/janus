<h1><%= t 'janus.passwords.new.forgot_password' %></h1>

<%= form_for @user, :url => user_password_path, :html => { :method => :post } do |f| %>
  <%= janus_error_messages %>

  <% @user.class.authentication_keys.each do |key| %>
    <div class="field">
      <%= f.label key %>
      <%= f.text_field key %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('janus.passwords.new.send_instructions_btn') %>
  </div>
<% end %>
